{
  "manifest_version": 3,
  "name": "AI Cover Letter Filler (Dev)",
  "version": "0.1.0",
  "action": { "default_title": "AI Cover Letter Filler" },
  "background": { "service_worker": "background.js" },
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["shared/messaging.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}


